# This script is to take media files downloaded and finished from sonarr and
# make them mp4 and add in the correct metadata

exec 1> >(logger -s -t "$(basename "$0")") 2>&1

ssh jpartain89@192.168.0.15 "{

    TMP=$(mktemp)

    cat << EOF > "$TMP"
#!/usr/bin/env bash

osascript -e \"
    set filePath to \(POSIX file \"${sonarr_episodefile_path}\" as alias\)
    tell application \"Subler\"
        add to queue filePath
    end tell\"
EOF

    bash "$TMP" &&
    rm "$TMP"
    exit
    }"
